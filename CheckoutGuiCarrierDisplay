        <script type="text/javascript">
        $(document).ready(function () {
            setup();
        });
        var GuiCarrierType = Object.freeze(
        {
            Undefined: { "id": "0", "description": "" },
            MobileCarrier: { "id": "1", "description": "MobileCarrier" },
            CitizenDigitalCertificate: { "id": "2", "description": "CitizenDigitalCertificate" },
            MelaleucaMembership: { "id": "3", "description": "MelaleucaMembership" }
        });
        function setup() {
            var GuiCarrier = GuiCarrierInformation;
            //Mobile carrier initial
            $("#mobileCarrier").val(GuiCarrier.CustomerGuiCarriers[GuiCarrierType.MobileCarrier.id]);
            //Citizen carrier initial
            $("#citizenCarrier").val(GuiCarrier.CustomerGuiCarriers[GuiCarrierType.CitizenDigitalCertificate.id]);
            //Donne initial
            if(GuiCarrier.DonationCodeFromDB && GuiCarrier.DonationOrganizationFromDB){
               $("#donneDisplay").text($.format("{0} {1}",GuiCarrier.DonationCodeFromDB , GuiCarrier.DonationOrganizationFromDB));    
            }
    
            if(GuiCarrier.DonationCodeFromDB  === ''){
                $("#comment_container").hide();
                $("#isDonne").prop('disabled',true);
            }

            if(GuiCarrier.DonationCodeFromDB  !== ''){
                if(GuiCarrier.DonationOrganizationFromDB !== GuiCarrier.DonationOrganizationFromService){
                    $("#errorDisplay").html('原設定捐贈碼或受捐贈機關或團體已變更 , 請點選"設定載具條碼及捐贈碼"進行捐贈碼設定更新 , 或選擇美樂家會員載具 , 謝謝!');
                    $("#errorDisplay").show();
                }
            }
            
            //check the carrier option
            $("#carrier").prop("checked", true);
            $("#carrier").prop('disabled',true);
            //Default option is Melaleuca carrier
            $("#guiCarrierType").val(GuiCarrierType.MelaleucaMembership.id);
            $("#isDonne").prop("checked", false);
            
             IsShowReminder();
        }
        Checkout.PaymethodSubmit.validate = function () {
            if ($("#isDonne").is(":checked") && $("#donneDisplay").text() === "") {
                return false;
            }
            return true;
        };
        Checkout.PaymethodSubmit.populateJson = function () {
            var donneValue = "";
            if ($("#isDonne").is(":checked")) {
                donneValue = $("#donneDisplay").text();
            }
            else {
                donneValue = "";
            }
            var json = {
                GUICarrierType: $("#guiCarrierType").val(),
                GUIDoneeValue: donneValue
            };
            return json;
        };
        function changeCarrier(carrier) {
            var carrierType = carrier.id;
            switch (carrierType) {
                case "carrier_Melaleuca":
                    $("#carrier-mobile").prop("checked", false);
                    $("#carrier-Citizen").prop("checked", false);
                    $("#guiCarrierType").val(GuiCarrierType.MelaleucaMembership.id);
                    break;
                case "carrier-mobile":
                    $("#carrier-Citizen").prop("checked", false);
                    $("#carrier_Melaleuca").prop("checked", false);
                    $("#guiCarrierType").val(GuiCarrierType.MobileCarrier.id);
                    break;
                case "carrier-Citizen":
                    $("#carrier-mobile").prop("checked", false);
                    $("#carrier_Melaleuca").prop("checked", false);
                    $("#guiCarrierType").val(GuiCarrierType.CitizenDigitalCertificate.id);
                    break;
            }
            return true;
        }

 function IsShowReminder(){
            
            $("#isDonne").change(function() {
                if(this.checked) {
                    $("#comment_container").show();
                }
                else{
                    $("#comment_container").hide();
                }
            });
        }
        
function GoToManageGuiInformationPage(){
        window.location.href='/MyAccount/AccountPreferences/GovernmentUniformInvoicePreferences?r=checkout';

    }


    </script>
